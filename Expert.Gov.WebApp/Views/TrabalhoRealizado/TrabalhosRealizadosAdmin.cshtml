@using Expert.Gov.Core.Authorization;
@using Expert.Gov.Core.Extensions;
@using Expert.Gov.Core.Models.TrabalhosRealizados
@using Newtonsoft.Json;

@model TrabalhosRealizadosLista
@{
    Layout = "_LayoutAdministrativo";
}

<div class="container container-ghost mt-5">

    <div class="col-lg-12 d-inline-flex">
        <h4 class="col-lg-10">Trabalhos realizados</h4>


        @if (User?.IsAuthenticated() ?? false)
        {
            <a type="button" class="btn btn-teal col-lg-2 ms-2" asp-controller="TrabalhoRealizado" asp-action="IncluirTrabalho">Incluir atividade</a>
        }
    </div>
    <hr />

</div>


<div class="container mt-5 mb-5">

    <form>
        <table class="table table-administrativo table-container">
            <thead class="table-dark">
                <tr>
                    <td>Código</td>
                    <td>Descricao</td>
                    <td>Resumo</td>
                    <td>Data</td>
                    <td>Endereco</td>
                    <td>Acoes </td>
                </tr>
            </thead>

            <tbody>
                @foreach (var trabalhoRealizado in Model.ListaTrabalhosRealizados)
                {
                    <tr>
                        <td> @trabalhoRealizado.Id_Portfolio</td>
                        <td>  @trabalhoRealizado.Descricao</td>
                        <td> @trabalhoRealizado.Resumo</td>
                        <td> @trabalhoRealizado.Data_Hora.ToString("dd/MM/yyyy")</td>
                        <td> @trabalhoRealizado.Endereco</td>
                        <td>
                            <div class="d-flex flex-wrap">
                                <button class="btn btn-secondary ms-1" asp-controller="TrabalhoRealizado" asp-action="EditarTrabalho" asp-route-id="@trabalhoRealizado.Id_Portfolio">Editar</button>
                                <button class="btn btn-danger ms-1" asp-controller="TrabalhoRealizado" asp-action="ExcluirTrabalho" asp-route-id="@trabalhoRealizado.Id_Portfolio">Excluir</button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </form>


</div>