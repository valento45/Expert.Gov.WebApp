@using Expert.Gov.Core.Extensions;
@using Expert.Gov.Core.Models.TrabalhosRealizados
@using Newtonsoft.Json;

@model TrabalhosRealizadosLista



<div class="container container-ghost mt-5">

    <div class="col-lg-12 d-inline-flex">
        <h4 class="col-lg-10">Trabalhos realizados</h4>
        <a type="button" class="btn btn-teal col-lg-2 ms-2" asp-controller="TrabalhoRealizado" asp-action="IncluirTrabalho">Incluir atividade</a>
    </div>
    <hr />





    <!--Trabalhos realizados ( ADMINISTRADOR )-->
    <form class="d-none">

        <table class="table">
            <thead class="table-dark">
                <tr>
                    <td>Id_Portfolio</td>
                    <td>Descricao</td>
                    <td>Resumo</td>
                    <td>Data</td>
                    <td>Endereco</td>
                    <td>Acoes </td>
                </tr>
            </thead>

            <tbody>
                @foreach (var trabalhoRealizado in Model.ListaTrabalhosRealizados)
                {
                    <tr>
                        <td> @trabalhoRealizado.Id_Portfolio</td>
                        <td>  @trabalhoRealizado.Descricao</td>
                        <td> @trabalhoRealizado.Resumo</td>
                        <td> @trabalhoRealizado.Data_Hora</td>
                        <td> @trabalhoRealizado.Endereco</td>
                        <td>
                            <button class="btn btn-secondary" asp-controller="TrabalhoRealizado" asp-action="EditarTrabalho" asp-route-id="@trabalhoRealizado.Id_Portfolio">Editar</button>
                            <button class="btn btn-danger" asp-controller="TrabalhoRealizado" asp-action="ExcluirTrabalho" asp-route-id="@trabalhoRealizado.Id_Portfolio">Excluir</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </form>


    <!--Trabalhos realizados Normal-->
    <form class="mt-5 pb-5 d-flex justify-content-center">

        <div class="col-lg-12 d-sm-inline-flex" style="flex-wrap: wrap; place-content: center;">

            @foreach (var trabRealizado in Model.ListaTrabalhosRealizados)
            {
                <div class="card-portfolio" onclick="onClickVerTrabalho(@JsonConvert.SerializeObject(trabRealizado))">
                    @if (trabRealizado.Imagens.Any())
                    {
                        var imagem = @trabRealizado.Imagens?.FirstOrDefault();
                        <img src="data:image/png;base64,@imagem.Anexo_Base64" style="width: 100%; height: 65%;" />
                    }
                    else
                    {
                        <img src="~/imgs/fundo 1.jpg" style="width: 100%; height: 65%;" />
                    }

                    <p class="mt-1" style="overflow-wrap: break-word;"><b>@trabRealizado.Descricao.ObterTextoSimplificado(80)</b></p>

                    <div style="display: grid;">
                        <small>@trabRealizado.Resumo.ObterTextoSimplificado() <b>...Ver mais</b></small>
                        <small style="overflow-wrap: break-word;">@trabRealizado.Endereco</small>
                    </div>
                </div>
            }

        </div>
    </form>
</div>



@section Scripts{
    <script src="~/js/Portfolios/listaPortfolios.js" asp-append-version="true"></script>
}