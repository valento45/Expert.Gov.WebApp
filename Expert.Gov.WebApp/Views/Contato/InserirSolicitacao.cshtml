@using Expert.Gov.Core.Models.SolicitacaoSugestao;
@model SolicitacaoViewModel

<div class="container mt-5 container-ghost">

    <h4>Fale conosco</h4>

    <small>Neste formulário você pode tirar dúvidas ou nos enviar solicitações de melhorias para que juntos possamos atender cada vez melhor nossa cidade.</small>
    <hr />


    <form class="form-contato-sugestao mt-3 col-lg-6" asp-controller="Contato" asp-action="SalvarSolicitacao" method="post" enctype="multipart/form-data">

        <input asp-for="Id_Solicitacao" class="d-none" />

        <div class="form-outline mb-4 ag-field-content">
            <input asp-for="Nome" type="text" id="txtEmail" class="form-control ag-field-input ag-input-color-orange-full" autocomplete="off" required />
            <label class="form-label text-semi-bold-light ag-field-label" for="form2Example2">Nome</label>
        </div>

        <div class="col-lg-12">
            <div class="form-outline mb-4 ag-field-content col-lg-6">
                <input asp-for="Celular" type="text" id="txtEmail" class="form-control ag-field-input ag-input-color-orange-full" autocomplete="off" required />
                <label class="form-label text-semi-bold-light ag-field-label" for="form2Example2">Celular</label>
            </div>
        </div>

        <div class="form-outline mb-4 ag-field-content">
            <input asp-for="Email" type="text" id="txtEmail" class="form-control ag-field-input ag-input-color-orange-full" autocomplete="off" required />
            <label class="form-label text-semi-bold-light ag-field-label" for="form2Example2">E-mail</label>
        </div>


        <div class="form-outline mb-4 ag-field-content">
            <input asp-for="Descricao_Titulo" type="text" id="txtEmail" class="form-control ag-field-input ag-input-color-orange-full" autocomplete="off" required />
            <label class="form-label text-semi-bold-light ag-field-label" for="form2Example2">Descreva Seu Problema</label>
        </div>

        <div class="mb-5">
            <a><span id="lblQtdAnexos">( 0 )</span>&nbsp; Anexos adicionados</a>
            <button type="button" class="btn btn-teal ms-3" onclick="onClickCarregarImagens(this)">Carregar anexos</button>
            <input id="btnCarregarImagens" onchange="onChangeImagens(this)" class="d-none" asp-for="Anexos" type="file" multiple>
        </div>

    

        <div class="col-lg-12">
            <div class="form-outline mb-4 ag-field-content col-lg-6">
                <input asp-for="Cep_solicitacao" type="text" id="txtEmail" class="form-control ag-field-input ag-input-color-orange-full" autocomplete="off" required />
                <label class="form-label text-semi-bold-light ag-field-label" for="form2Example2">CEP</label>
            </div>
        </div>


        <div class="col-lg-12 d-inline-flex">
            <div class="form-outline mb-4 ag-field-content col-lg-10 col-sm-10">
                <input asp-for="Endereco_solicitacao" type="text" id="txtEmail" class="form-control ag-field-input ag-input-color-orange-full" autocomplete="off" required />
                <label class="form-label text-semi-bold-light ag-field-label" for="form2Example2">Endereço</label>
            </div>

            <div class="col-lg-2 col-sm-2  ag-field-content ms-2">
                <input asp-for="Numero_solicitacao" type="number" id="txtEmail" class="form-control ag-field-input ag-input-color-orange-full" autocomplete="off" required />
                <label class="form-label text-semi-bold-light ag-field-label" for="form2Example2">Nº</label>
            </div>
        </div>




        <div class="form-outline mb-4 ag-field-content col-lg-12 col-sm-12">
            <textarea asp-for="Descricao_Sugestao_Melhoria" class="form-control ag-field-input ag-input-color-orange-full" autocomplete="off" style="height: 200px;">

            </textarea>
            <label class="form-label text-semi-bold-light ag-field-label" for="form2Example2">Decreva sua sugestão (Opcional)</label>
        </div>

        <div class="mt-5">
            <button type="submit" class="btn btn-teal ms-5">Enviar</button>
            <button type="button" class="btn btn-voltar ms-5">Voltar</button>

        </div>

    </form>

</div>
@section Scripts{
    <script src="~/js/Solicitar/solicitarMelhoria.js" asp-append-version="true"></script>
}
